unit Filiere;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.StdCtrls, Vcl.Grids,
  Vcl.DBGrids, Vcl.ExtCtrls,DM;

type
  TForm_filiere = class(TForm)
    Panel_filiere: TPanel;
    Label2: TLabel;
    Label3: TLabel;
    DBGrid1: TDBGrid;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Button4: TButton;
    code: TEdit;
    libeller: TEdit;
    procedure Button1Click(Sender: TObject);
    procedure DBGrid1CellClick(Column: TColumn);
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form_filiere: TForm_filiere;

implementation

{$R *.dfm}

procedure TForm_filiere.Button1Click(Sender: TObject);
begin
   with DataM.DM_filiere do
  begin
    open;
    insert;
    FieldByName('libelle').AsString := libeller.Text;
    FieldByName('Code_F').AsString :=code.Text;
    post;
  end;
    code.Clear   ;
    libeller.Clear;
    dataM.DM_filiere.Refresh;

end;

procedure TForm_filiere.Button2Click(Sender: TObject);
begin
      with DataM.DM_filiere_query do
      begin

        ParamByName('C').AsString := DBGrid1.Fields[1].Value;
        ExecSQL;

      end;
       DataM.DM_filiere.Refresh;
end;

procedure TForm_filiere.DBGrid1CellClick(Column: TColumn);
begin
  code.Text := DBGrid1.Fields[1].Value;
  libeller.Text := DBGrid1.Fields[0].Value;
end;

end.
